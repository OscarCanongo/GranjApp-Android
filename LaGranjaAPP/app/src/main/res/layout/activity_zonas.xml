<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zonas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/camada1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBrown"
                android:onClick="cultivos"
                android:text="Cultivos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp" />

            <Button
                android:id="@+id/camada2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBrown"
                android:onClick="abonos"
                android:text="Abonos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp" />

            <Button
                android:id="@+id/camada3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBrown"
                android:onClick="insecticida"
                android:text="Insecticidas"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp" />

            <Button
                android:id="@+id/camada4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBrown"
                android:onClick="fungicida"
                android:text="Fungicidas"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp" />

            <Button
                android:id="@+id/camada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBrown"
                android:onClick="repelente"
                android:text="Repelentes"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>