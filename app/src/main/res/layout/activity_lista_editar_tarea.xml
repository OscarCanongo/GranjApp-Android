<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp">

    <RelativeLayout
        android:id="@+id/editarTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/idTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/actividadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarea "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tareaTextAsignacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actividadName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="Actividad asignada a: "
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tareaAsignacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actividadName"
            android:layout_toRightOf="@+id/tareaTextAsignacion"
            android:text="Usuario "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFechaList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDescList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtTerminado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtUserAsigList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtCompList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>