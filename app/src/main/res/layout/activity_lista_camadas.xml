<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/camada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ForestGreen"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/plantingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ForestGreen" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ForestGreen" />

        <TextView
            android:id="@+id/machos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ForestGreen" />

        <TextView
            android:id="@+id/salud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ForestGreen" />

        <TextView
            android:id="@+id/etapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/ForestGreen" />

        <TextView
            android:id="@+id/tvTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camada: "
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTextName"
            android:text="Camada: "
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/camadaTextNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextName"
            android:text="Nacimiento: "
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/camadaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextName"
            android:layout_toRightOf="@+id/camadaTextNacimiento"
            android:text="Zona: "
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>