<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/idTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/complejidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/actividadName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tareaTextAsignacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividad asignada a: "
            android:textSize="20dp"
            android:textStyle="italic"
            card_view:layout_constraintStart_toStartOf="@+id/actividadName"
            card_view:layout_constraintTop_toBottomOf="@+id/actividadName" />

        <TextView
            android:id="@+id/tareaAsignacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Usuario "
            android:textSize="20dp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/tareaTextAsignacion"
            card_view:layout_constraintTop_toBottomOf="@+id/tareaTextAsignacion" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>